<% layout('layouts/boilerplate') %>

<div class="row mb-5">
  <div class="col-sm-8 offset-sm-2 shadow-sm bg-body">
    <h2 style="text-align: center" class="my-3">Edit Your Profile</h2>
    <form
      action="/account/<%= editAccount._id %>?_method=PUT"
      class="validated-form"
      method="POST"
      novalidate
    >
      <div class="row g-3">
        <div class="col-md-12" style="text-align: center">
          <%#if(editAccount.imageProfile){ %>
          <!-- <img
            style="width: 150px; height: 150px; border-radius: 50%"
            class="shadow-sm bg-body"
            src="<%#= editAccount.imageProfile %> "
            alt="File not found"
          /> -->
          <%# } else { %>
          <img
            style="width: 150px; height: 150px; border-radius: 50%"
            class="shadow-sm bg-body"
            src="https://images.unsplash.com/photo-1638612913771-8f00622b96fb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60"
            alt="File not found"
          />
          <%# } %>
        </div>
        <div class="col-md-12">
          <label for="imageProfile" class="form-label"
            >Paste google Drive iage link here</label
          >
          <input
            type="text"
            class="form-control"
            id="imageProfile"
            name="account[imageProfile]"
            value="<%= editAccount.imageProfile %>"
            autofocus
          />
          <div class="valid-feedback">Looks good</div>
        </div>
        <!-- src="https://images.unsplash.com/photo-1638612913771-8f00622b96fb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60" -->

        <div class="col-md-4">
          <label for="first-name" class="form-label">First Name</label>
          <input
            type="text"
            class="form-control"
            name="account[firstName]"
            id="first-name"
            value="<%= editAccount.firstName %>"
          />
        </div>
        <div class="col-md-4">
          <label for="middle-name" class="form-label">Middle Name</label>
          <input
            type="text"
            class="form-control"
            id="middle-name"
            name="account[middleName]"
            value="<%= editAccount.middleName %>"
          />
        </div>
        <div class="col-md-4">
          <label for="last-name" class="form-label">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="last-name"
            name="account[lastName]"
            value="<%= editAccount.lastName %>"
          />
        </div>
        <div class="col-md-2">
          <label for="age" class="form-label">Age</label>
          <input
            type="number"
            class="form-control"
            id="age"
            name="account[age]"
            value="<%= editAccount.age %>"
          />
        </div>

        <div class="col-md-5">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            value="<%= editAccount.username %>"
            disabled
          />
        </div>
        <div class="col-md-5">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            value="<%= editAccount.email %>"
            disabled
          />
        </div>
        <div class="col-md-12">
          <label for="bio" class="form-label">Bio</label>

          <textarea class="form-control" id="bio" name="account[bio]">
 
<%= editAccount.bio %></textarea
          >
        </div>
        <div class="col-12">
          <label for="currentLocation" class="form-label"
            >Current Address</label
          >
          <input
            type="text"
            class="form-control"
            id="currentLocation"
            name="account[currentLocation]"
            value="<%= editAccount.currentLocation %>"
          />
        </div>
        <div class="col-12">
          <label for="permanentAddress" class="form-label"
            >Permanent Address</label
          >
          <input
            type="text"
            class="form-control"
            id="permanentAddress"
            name="account[permanentAddress]"
            value="<%= editAccount.permanentAddress %>"
          />
        </div>
        <div class="col-md-6">
          <label for="city" class="form-label">City</label>
          <input
            type="text"
            class="form-control"
            id="city"
            name="account[city]"
            value="<%= editAccount.city %>"
          />
        </div>
        <div class="col-md-4">
          <label for="state" class="form-label">State</label>
          <select id="state" class="form-select" name="account[state]">
            <option selected><%= editAccount.state %></option>
          </select>
        </div>
        <div class="col-md-2">
          <label for="zipCode" class="form-label">Zip-Code</label>
          <input
            type="text"
            class="form-control"
            id="zipCode"
            name="account[zipCode]"
            value="<%= editAccount.zipCode %>"
          />
        </div>
        <div class="col-md-6">
          <a href="/account" class="btn btn-info mb-3">Cancel</a>
        </div>
        <div class="col-md-6">
          <button type="submit" class="btn btn-success mb-3">
            Update Profile
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
